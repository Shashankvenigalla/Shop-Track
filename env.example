# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/shop_track
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Application Settings
APP_NAME=ShopTrack
DEBUG=True
SECRET_KEY=your-secret-key-here
API_V1_STR=/api/v1

# ML Model Settings
ML_MODEL_PATH=models/rush_predictor.pkl
ML_UPDATE_INTERVAL=3600  # 1 hour in seconds
PREDICTION_HORIZON=24    # hours to predict ahead

# Alert Settings
ALERT_THRESHOLD=0.7
LOW_STOCK_THRESHOLD=10
RUSH_PREDICTION_THRESHOLD=0.8

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Dashboard Settings
DASHBOARD_PORT=8050
DASHBOARD_HOST=0.0.0.0

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=True 